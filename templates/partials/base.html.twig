{% use "blocks/base.html.twig" %}
<!DOCTYPE html>
<html lang="en">
  <head>
    {% block head %}
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>
        {% if header.title %}
          {{ header.title|e }}
        {% endif %}
        {{ site.title|e }}</title>
    {% endblock %}
    {% block stylesheets %}
      {% do assets.addCss('theme://css/theme.css', 98) %}
    {% endblock %}

    {% block assets deferred %}
      {{ assets.css()|raw }}
    {% endblock %}

  </head>
  <body>
    {% block header %}
      <nav class="navbar bg-light">
        <div class="container-fluid">
          <a href="#" class="navbar-brand">
            {{ config.site.title|e }}
          </a>
        </div>
      </nav>
    {% endblock %}

    {% block body %}
      <div class="container">
        {{ block('content_surround') }}
      </div>
    {% endblock %}

    {% block footer %}{% endblock %}

    {% block javascripts %}
      {% do assets.addJs('theme://js/bootstrap.min.js') %}
      {{ assets.js()|raw }}
    {% endblock %}
  </body>
</html>
