    "eslint-plugin-import": "^2.26.0",
    "highlight.js": "^11.6.0",
    "stylelint": "^14.8.5",
    "stylelint-config-standard-scss": "^4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laupiFrpar/grav-theme-lopi.git"
  },
  "keywords": [
    "sass",
    "front-end",
    "bootstrap"
  ],
  "bugs": {
